<div class="row justify-content-center mt-3">
  <div class="col col-md-4"><h1><%= t('.header') %></h1></div>
  <div class="col-12">
    <%= link_to t('.new_test'), new_admin_test_path %>
    <p> <%= link_to t('.gists'), admin_gists_path %></p>

    <table class="table">
      <thead>
      <tr>
        <th class="sort-by-title pointer">
          <%= t('shared.index.title') %>
          <%= octicon 'arrow-up', class: 'text-success hide' %>
          <%= octicon 'arrow-down', class: 'text-success hide' %>
        </th>
        <th><%= t('shared.index.level') %></th>
        <th><%= t('shared.index.category') %></th>
        <th><%= t('shared.index.author') %></th>
        <th><%= t('shared.index.number') %></th>
        <th colspan="3"><%= t('.actions') %></th>
      </tr>
      </thead>
      <tbody>
      <%= render @tests %>
      </tbody>
    </table>
  </div>
</div>
