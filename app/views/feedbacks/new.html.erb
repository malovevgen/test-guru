<h2><%= t('shared.feedback.header') %></h2>

<%= form_with model: @feedback, local: true do |f| %>
  <%= render 'shared/errors', resource: @feedback %>

    <p>
      <%= f.label :email, t('.email') %>
      <%= f.email_field :email, autofocus: true, autocomplete: 'email' %>
    </p>

  <p>
    <%= f.label t('.message') %><br />
    <%= f.text_area 'message', :rows => 10, :cols => 30 %>
  </p>
  <p><%= f.submit t('.send') %></p>
<% end %>
